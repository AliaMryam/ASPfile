@model IEnumerable<HospitalManagementSystem.Models.Patient>

<h2>Patients</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var patient in Model)
    {
        <tr>
            <td>@patient.Name</td>
            <td>@patient.Age</td>
            <td>@patient.Gender</td>
            <td>@patient.Phone</td>
            <td>
                <a href="@Url.Action("Details", "Patient", new { id = patient.PatientId })">Details</a> |
                <a href="@Url.Action("Edit", "Patient", new { id = patient.PatientId })">Edit</a> |
                <a href="@Url.Action("Delete", "Patient", new { id = patient.PatientId })">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

